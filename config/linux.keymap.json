[
  // {
  //   "context": "sandbox.editor",
  //   "commands": [
  //     {"keys": ["ctrl+enter"],     "command": "toggleNodeInserter" }
  //   ]
  // },
  {
    "context": "sandbox.editor.writer",
    "commands": [
      {"keys": ["backspace"],      "command": "delete", "args": ["left"] },
      {"keys": ["del"],            "command": "delete", "args": ["right"] },

      {"keys": ["enter"],          "command": "modifyNode" },
      {"keys": ["shift+enter"],    "command": "write", "args": ["\n"] },

      {"keys": ["ctrl+enter h"],   "command": "insertNode", "args": ["heading"] },
      {"keys": ["ctrl+enter p"],   "command": "insertNode", "args": ["paragraph"] },
      {"keys": ["ctrl+enter i"],   "command": "insertNode", "args": ["image"] },
      {"keys": ["ctrl+enter c"],   "command": "insertNode", "args": ["codeblock"] },

      {"keys": ["ctrl+c"],         "command": "copy", "preventDefault": "false" },
      {"keys": ["ctrl+x"],         "command": "cut" },
      {"keys": ["ctrl+v"],         "command": "paste" },

      {"keys": ["ctrl+i"],         "command": "annotate", "args": ["emphasis"]},
      {"keys": ["ctrl+b"],         "command": "annotate", "args": ["strong"]},
      {"keys": ["ctrl+1"],         "command": "annotate", "args": ["idea"]},
      {"keys": ["ctrl+2"],         "command": "annotate", "args": ["question"]},
      {"keys": ["ctrl+3"],         "command": "annotate", "args": ["error"]},

      {"keys": ["right"],             "command": "move", "scope": "selection", "args": ["right", "char"] },
      {"keys": ["left"],              "command": "move", "scope": "selection", "args": ["left", "char"] },
      {"keys": ["down"],                "command": "move", "scope": "selection", "args": ["right", "line"] },
      {"keys": ["up"],                  "command": "move", "scope": "selection", "args": ["left", "line"] },

      {"keys": ["ctrl+right"],         "command": "move", "scope": "selection", "args": ["right", "word"] },
      {"keys": ["ctrl+left"],          "command": "move", "scope": "selection", "args": ["left", "word"] },

      {"keys": ["shift+right"],       "command": "expand", "scope": "selection", "args": ["right", "char"] },
      {"keys": ["shift+left"],        "command": "expand", "scope": "selection", "args": ["left", "char"] },
      {"keys": ["shift+down"],          "command": "expand", "scope": "selection", "args": ["right", "line"] },
      {"keys": ["shift+up"],            "command": "expand", "scope": "selection", "args": ["left", "line"] },

      {"keys": ["shift+ctrl+right"],   "command": "expand", "scope": "selection", "args": ["right", "word"] },
      {"keys": ["shift+ctrl+left"],    "command": "expand", "scope": "selection", "args": ["left", "word"] }
    ]
  }
]
